@model LoginViewModel

<div class="box-parent-login" style="background-color:lightgrey; margin-top: 100px">
	<div class="well box-login" style="background-color:lightgrey">
		<h1 class="ls-login-logo">REGISTRE-SE</h1>
		<form asp-controller="Account" asp-action="Register" method="post" role="form">
			<fieldset>
				<div asp-validation-summary="All" class="text-danger"></div>
				<input type="hidden" asp-for="ReturnUrl" />
				<div class="form-group ls-login-user">
					<label asp-for="UserName" for="userLogin">Usuário</label>
					<input asp-for="UserName" class="form-control ls-login-bg-user input-lg" id="userLogin" type="text" aria-label="Usuário" placeholder="Usuário">
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>
 
				<div class="form-group ls-login-password">
					<label asp-for="Password" for="userPassword">Senha</label>
					<input asp-for="Password" class="form-control ls-login-bg-password input-lg" id="userPassword" type="password" aria-label="Senha" placeholder="Senha">
					<span asp-validation-for="Password" class="text-danger"></span>
					<p>A senha precisa ter número, caractere especial e letras maiúsculas e minusculas</p>
				</div>
 
				
 
				<input type="submit" value="Registrar" class="btn btn-primary btn-lg btn-block">
				
 
			</fieldset>
		</form>
	</div>
</div>