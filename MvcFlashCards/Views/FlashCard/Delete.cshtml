@model MvcFlashCards.Models.FlashCard

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Tem certeza que deseja deletar este FlashCard</h3>
<div>
    <hr/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MsgFrente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MsgFrente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MsgVerso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MsgVerso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FlashCardId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="List">Voltar para meus FlashCards</a>
    </form>
</div>
